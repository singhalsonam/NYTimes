<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_popular_articles">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_50"
        android:layout_height="40dp"
        android:padding="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher_round" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textSize="@dimen/sp_24"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingBottom="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintStart_toEndOf="@id/iv_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Inside Aleksei Navalnyâ€™s Final Months, in His Own Words" />

   <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/tv_author"
       android:layout_width="@dimen/dp_0"
       android:layout_height="wrap_content"
       android:textSize="@dimen/sp_16"
       app:layout_constraintStart_toStartOf="@id/tv_title"
       app:layout_constraintTop_toBottomOf="@id/tv_title"
       android:paddingStart="@dimen/dp_8"
       android:paddingTop="@dimen/dp_4"
       android:paddingBottom="@dimen/dp_4"
       android:paddingEnd="@dimen/dp_4"
       tools:text = "By Anton Troianovski"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_published_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_author"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_4"
        android:drawableStart="@drawable/icon_calendar"
        android:textSize="@dimen/sp_16"
        android:drawablePadding="@dimen/dp_4"
        tools:text="2023-01-26"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_right"
        android:layout_margin="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/dp_8"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/tv_published_date"/>
</androidx.constraintlayout.widget.ConstraintLayout>